# ============================================
# E-COMMERCE PRODUCTION ENVIRONMENT
# ============================================
# IMPORTANT: Never commit this file to version control!
# Copy this to .env.production and configure your secrets

# Node Environment
NODE_ENV=production

# ============================================
# DATABASE CONFIGURATION
# ============================================
MONGO_ROOT_USER=admin
MONGO_ROOT_PASSWORD=your-secure-production-password

# ============================================
# REDIS CONFIGURATION
# ============================================
REDIS_PASSWORD=your-secure-redis-password

# ============================================
# JWT CONFIGURATION
# ============================================
JWT_SECRET=your-super-secret-256-bit-key-for-production
JWT_EXPIRES_IN=1h
JWT_REFRESH_SECRET=your-refresh-secret-256-bit-key
JWT_REFRESH_EXPIRES_IN=7d

# ============================================
# CORS CONFIGURATION
# ============================================
ALLOWED_ORIGINS=https://yourdomain.com,https://admin.yourdomain.com,https://seller.yourdomain.com

# ============================================
# FRONTEND URLs
# ============================================
NEXT_PUBLIC_API_URL=https://api.yourdomain.com/graphql
NEXT_PUBLIC_AUTH_URL=https://api.yourdomain.com/auth

# ============================================
# CLOUDINARY (IMAGE UPLOADS)
# ============================================
VITE_CLOUDINARY_CLOUD_NAME=your-cloud-name
VITE_CLOUDINARY_UPLOAD_PRESET=your-upload-preset

# ============================================
# STRIPE (PAYMENTS)
# ============================================
STRIPE_SECRET_KEY=sk_live_your-stripe-live-secret-key
STRIPE_PUBLIC_KEY=pk_live_your-stripe-live-public-key
VITE_STRIPE_PUBLIC_KEY=pk_live_your-stripe-live-public-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# ============================================
# EMAIL CONFIGURATION
# ============================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=true
SMTP_USER=your-email@yourdomain.com
SMTP_PASSWORD=your-app-specific-password
EMAIL_FROM=noreply@yourdomain.com

# ============================================
# LOGGING
# ============================================
LOG_LEVEL=info
ENABLE_FILE_LOGGING=true

# ============================================
# MONITORING (Optional)
# ============================================
SENTRY_DSN=your-sentry-dsn
NEW_RELIC_LICENSE_KEY=your-new-relic-key
