{
  "name": "ecommerce-platform",
  "version": "1.0.1",
  "private": true,
  "description": "Enterprise 3A Softwares with multiple independent applications",
  "workspaces": [
    "apps/*",
    "packages/*",
    "services/*"
  ],
  "scripts": {
    "dev:admin": "yarn workspace @3asoftwares/admin-app run dev",
    "dev:shell": "yarn workspace @3asoftwares/shell-app run dev",
    "dev:seller": "yarn workspace @3asoftwares/seller-app run dev",
    "dev:auth": "yarn workspace @3asoftwares/auth-service run dev",
    "dev:category": "yarn workspace @3asoftwares/category-service run dev",
    "dev:coupon": "yarn workspace @3asoftwares/coupon-service run dev",
    "dev:gateway": "yarn workspace @3asoftwares/graphql-gateway run dev",
    "dev:order": "yarn workspace @3asoftwares/order-service run dev",
    "dev:product": "yarn workspace @3asoftwares/product-service run dev",
    "dev:support": "yarn workspace @3asoftwares/support-app run dev",
    "dev:ticket": "yarn workspace @3asoftwares/ticket-service run dev",
    "dev:frontend": "concurrently \"yarn dev:admin\" \"yarn dev:shell\" \"yarn dev:seller\" \"yarn dev:support\" --names \"admin,shell,seller,support\" --prefix-colors \"cyan,green,yellow,magenta\"",
    "dev:backend": "concurrently \"yarn dev:auth\" \"yarn dev:category\" \"yarn dev:coupon\" \"yarn dev:gateway\" \"yarn dev:order\" \"yarn dev:product\" \"yarn dev:ticket\" --names \"auth,category,coupon,gateway,order,product,ticket\" --prefix-colors \"magenta,green,yellow,cyan,blue,white,red\"",
    "dev:all": "concurrently \"yarn dev:frontend\" \"yarn dev:backend\" --names \"FRONTEND,BACKEND\" --prefix-colors \"cyan,white\"",
    "build:types": "yarn workspace @3asoftwares/types build",
    "build:utils": "yarn workspace @3asoftwares/utils build",
    "build:ui": "yarn workspace @3asoftwares/ui build",
    "build:admin": "yarn workspace @3asoftwares/admin-app run build",
    "build:shell": "yarn workspace @3asoftwares/shell-app run build",
    "build:seller": "yarn workspace @3asoftwares/seller-app run build",
    "build:auth": "cd services/auth-service && yarn build",
    "build:category": "cd services/category-service && yarn build",
    "build:coupon": "cd services/coupon-service && yarn build",
    "build:gateway": "cd services/graphql-gateway && yarn build",
    "build:order": "cd services/order-service && yarn build",
    "build:product": "cd services/product-service && yarn build",
    "build:ticket": "cd services/ticket-service && yarn build",
    "build:support": "yarn workspace @3asoftwares/support-app run build:css",
    "build:packages": "yarn workspace @3asoftwares/types build && yarn workspace @3asoftwares/utils build && yarn workspace @3asoftwares/ui build",
    "build:frontend": "yarn build:admin && yarn build:shell && yarn build:seller && yarn build:support",
    "build:backend": "yarn build:auth && yarn build:category && yarn build:coupon && yarn build:gateway && yarn build:order && yarn build:product && yarn build:ticket",
    "build:all": "yarn build:frontend && yarn build:backend",
    "test:types": "yarn workspace @3asoftwares/types test",
    "test:utils": "yarn workspace @3asoftwares/utils test",
    "test:ui": "yarn workspace @3asoftwares/ui test",
    "test:admin": "yarn workspace @3asoftwares/admin-app run test",
    "test:shell": "yarn workspace @3asoftwares/shell-app run test",
    "test:seller": "yarn workspace @3asoftwares/seller-app run test",
    "test:auth": "yarn workspace @3asoftwares/auth-service run test",
    "test:category": "yarn workspace @3asoftwares/category-service run test",
    "test:coupon": "yarn workspace @3asoftwares/coupon-service run test",
    "test:gateway": "yarn workspace @3asoftwares/graphql-gateway run test",
    "test:order": "yarn workspace @3asoftwares/order-service run test",
    "test:product": "yarn workspace @3asoftwares/product-service run test",
    "test:ticket": "yarn workspace @3asoftwares/ticket-service run test",
    "test:packages": "yarn test:types && yarn test:utils && yarn test:ui",
    "test:frontend": "yarn test:admin && yarn test:shell && yarn test:seller",
    "test:backend": "yarn test:auth && yarn test:category && yarn test:coupon && yarn test:order && yarn test:product && yarn test:ticket",
    "test:all": "yarn test:frontend && yarn test:backend",
    "test:coverage:admin": "yarn workspace @3asoftwares/admin-app run test -- --coverage",
    "test:coverage:shell": "yarn workspace @3asoftwares/shell-app run test -- --coverage",
    "test:coverage:seller": "yarn workspace @3asoftwares/seller-app run test -- --coverage",
    "test:coverage:auth": "yarn workspace @3asoftwares/auth-service run test -- --coverage",
    "test:coverage:category": "yarn workspace @3asoftwares/category-service run test -- --coverage",
    "test:coverage:coupon": "yarn workspace @3asoftwares/coupon-service run test -- --coverage",
    "test:coverage:gateway": "yarn workspace @3asoftwares/graphql-gateway run test -- --coverage",
    "test:coverage:order": "yarn workspace @3asoftwares/order-service run test -- --coverage",
    "test:coverage:product": "yarn workspace @3asoftwares/product-service run test -- --coverage",
    "test:coverage:ticket": "yarn workspace @3asoftwares/ticket-service run test -- --coverage",
    "test:coverage:frontend": "yarn test:coverage:admin && yarn test:coverage:shell && yarn test:coverage:seller",
    "test:coverage:backend": "yarn test:coverage:auth && yarn test:coverage:category && yarn test:coverage:coupon && yarn test:coverage:order && yarn test:coverage:product && yarn test:coverage:ticket",
    "test:coverage:all": "yarn test:coverage:frontend && yarn test:coverage:backend",
    "lint:admin": "yarn workspace @3asoftwares/admin-app run lint",
    "lint:shell": "yarn workspace @3asoftwares/shell-app run lint",
    "lint:seller": "yarn workspace @3asoftwares/seller-app run lint",
    "lint:frontend": "yarn lint:admin && yarn lint:shell && yarn lint:seller",
    "lint:fix:admin": "yarn workspace @3asoftwares/admin-app run lint:fix",
    "lint:fix:shell": "yarn workspace @3asoftwares/shell-app run lint:fix",
    "lint:fix:seller": "yarn workspace @3asoftwares/seller-app run lint:fix",
    "lint:fix:frontend": "yarn lint:fix:admin && yarn lint:fix:shell && yarn lint:fix:seller",
    "health": "powershell -ExecutionPolicy Bypass -File ./scripts/health-check.ps1",
    "health:backend": "powershell -ExecutionPolicy Bypass -File ./scripts/health-check.ps1 -Services",
    "health:frontend": "powershell -ExecutionPolicy Bypass -File ./scripts/health-check.ps1 -Frontend",
    "health:verbose": "powershell -ExecutionPolicy Bypass -File ./scripts/health-check.ps1 -Verbose"
  },
  "dependencies": {
    "autoprefixer": "^10.4.23",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.4.0",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "vite": "^5.4.11"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "npm-run-all": "^4.1.5"
  },
  "resolutions": {
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "vite": "5.4.11",
    "vitest": "1.6.0",
    "@vitest/coverage-v8": "1.6.0"
  },
  "overrides": {
    "swagger-jsdoc": {
      "yaml": "2.0.0-1"
    }
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "keywords": [
    "3asoftwares",
    "monorepo",
    "react",
    "nextjs",
    "vite",
    "webpack"
  ],
  "author": "",
  "license": "ISC"
}
