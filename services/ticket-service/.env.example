# Ticket Service Environment Variables
PORT=3009
NODE_ENV=development

# MongoDB
MONGODB_URI=mongodb://localhost:27017/e-storefront-tickets

# JWT (for validating tokens from auth-service)
JWT_SECRET=your-jwt-secret-key
JWT_EXPIRES_IN=7d

# CORS
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5500,http://127.0.0.1:5500

# Logging
ENABLE_FILE_LOGGING=true
LOG_FILE_PATH=logs/ticket-service.log
LOG_LEVEL=debug
