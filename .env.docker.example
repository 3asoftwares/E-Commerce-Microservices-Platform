# Docker Environment Configuration Template
# Copy this to .env.docker and customize as needed

# Node Environment
NODE_ENV=development

# MongoDB Configuration
MONGODB_URI=mongodb://admin:password@mongodb:27017/ecommerce-auth?authSource=admin
MONGO_INITDB_ROOT_USERNAME=admin
MONGO_INITDB_ROOT_PASSWORD=password

# Redis Configuration
REDIS_URL=redis://redis:6379
REDIS_PORT=6379

# Services Configuration
AUTH_SERVICE_URL=http://backend:3010
PRODUCT_SERVICE_URL=http://backend:3011
ORDER_SERVICE_URL=http://backend:3012
GRAPHQL_GATEWAY_URL=http://backend:4000

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:3002,http://localhost:3003

# API Configuration
API_PORT=4000
API_HOST=0.0.0.0

# JWT Configuration
JWT_SECRET=your-jwt-secret-key-change-in-production
JWT_EXPIRY=24h

# Cloudinary Configuration (for image uploads)
VITE_CLOUDINARY_CLOUD_NAME=your-cloud-name
VITE_CLOUDINARY_UPLOAD_PRESET=your-upload-preset

# Stripe Configuration (for payments)
STRIPE_SECRET_KEY=your-stripe-secret-key
STRIPE_PUBLIC_KEY=your-stripe-public-key

# Email Configuration
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USER=user
SMTP_PASSWORD=password

# Logging
LOG_LEVEL=debug

# Cache
CACHE_TTL=3600

# Session
SESSION_SECRET=your-session-secret-key

# Features
ENABLE_STORYBOOK=true
ENABLE_SWAGGER=true
